<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmeDetalesActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detales_tarja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detales_nome_dir"
        android:textSize="20dp"
        android:text="Diretor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detales_genero"
        android:textSize="20dp"
        android:text="Genero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detales_ano"
        android:textSize="20dp"
        android:text="ano" />

    <TextView
        android:id="@+id/detales_nome_fil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum filme carregado"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

</LinearLayout>